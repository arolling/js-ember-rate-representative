<h4>Sign In</h4>
<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">
        {{input id="username" type="text" class="validate" value=username}}
        <label for="username">User Name</label>
      </div>
      <div class="input-field col s6">
        {{input id="zipcode" type="number" class="validate" value=zipcode length="5"}}
        <label for="zipcode">Zip Code</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action" {{action "logIn"}}>Log In
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
