<h4>New User</h4>
<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">
        {{input placeholder="Username" id="usernameNew" type="text" validate=true value=usernameNew}}
        <label for="usernameNew" class="active">User Name</label>
      </div>
      <div class="input-field col s6">
        {{input id="zipcodeNew" type="number" validate=true placeholder="90210" value=zipcodeNew length="5"}}
        <label for="zipcodeNew" class="active">Zip Code</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        {{input id="addressNew" type="text" validate=true placeholder="123 Main St, New York, NY" value=addressNew}}
        <label for="addressNew" class="active">Address</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action" {{action "signUpNew"}}>Sign Up
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
